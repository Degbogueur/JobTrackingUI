@inherits LayoutComponentBase
@using MudBlazor

<main class="d-flex flex-column vh-100">
    <NavMenu />

    @* Required *@
    <MudThemeProvider />
    <MudPopoverProvider />

    @* Needed for dialogs *@
    <MudDialogProvider />

    @* Needed for snackbars *@
    <MudSnackbarProvider />

    <div class="bg-light flex-fill py-4">
        <div class="container-fluid container-lg px-md-4">
            @Body
        </div>
    </div>
</main>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
